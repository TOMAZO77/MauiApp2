<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ComicDetailPage">

    <StackLayout VerticalOptions="Start" HorizontalOptions="Start" Padding="10">
        <Button Text="Back" Clicked="OnBackButtonClicked" BackgroundColor="Transparent" TextColor="Black" />
    </StackLayout>
    <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand">
        <VerticalStackLayout>
            <CollectionView ItemsSource="{Binding ComicPages}"
                            VerticalOptions="FillAndExpand"
                            HorizontalOptions="FillAndExpand"
                            Margin="0">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="0">
                            <Image Source="{Binding}" Aspect="AspectFit" Margin="0" HeightRequest="1200" />
                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Image Source="down-arrow.png" HorizontalOptions="Center" HeightRequest="30" />
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
