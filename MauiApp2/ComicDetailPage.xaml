<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.ComicDetailPage">

    <ContentPage.Content>
        <ScrollView>
            <VerticalStackLayout>
                <CollectionView ItemsSource="{Binding ComicPages}"
                                VerticalOptions="FillAndExpand"
                                HorizontalOptions="FillAndExpand"
                                Margin="10">
                    <CollectionView.ItemTemplate>
                        <DataTemplate>
                            <Grid Padding="10">
                                <Image Source="{Binding}" Aspect="AspectFit" Margin="10" HeightRequest="1000" />
                            </Grid>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
                <Image Source="down-arrow.png" HorizontalOptions="Center" HeightRequest="30" />
            </VerticalStackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
