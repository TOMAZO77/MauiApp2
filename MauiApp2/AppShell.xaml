<Shell xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:local="clr-namespace:MauiApp2"
       x:Class="MauiApp2.AppShell">

    <FlyoutItem Title="Home" Icon="home.png">
        <ShellContent Route="home" ContentTemplate="{DataTemplate local:MainPage}" />
    </FlyoutItem>

    <FlyoutItem Title="DC Comics" Icon="dc.png">
        <ShellContent Route="dc" ContentTemplate="{DataTemplate local:DCComicsPage}" />
    </FlyoutItem>

    <FlyoutItem Title="Marvel Comics" Icon="marvel.png">
        <ShellContent Route="marvel" ContentTemplate="{DataTemplate local:MarvelComicsPage}" />
    </FlyoutItem>

</Shell>
