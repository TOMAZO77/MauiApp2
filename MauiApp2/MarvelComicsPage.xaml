<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MarvelComicsPage">

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding ComicCovers}"
                        SelectionMode="Single"
                        SelectionChanged="OnComicSelected">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Image Source="{Binding}" HeightRequest="200" WidthRequest="150" Margin="10" />
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
