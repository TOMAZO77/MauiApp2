<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp2.MarvelComicsPage">

    <ContentPage.Content>
        <CollectionView ItemsSource="{Binding ComicCovers}"
                        SelectionMode="Single"
                        SelectionChanged="OnComicSelected"
                        Margin="10">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid Padding="10">
                        <Image Source="{Binding}" HeightRequest="450" WidthRequest="350" Margin="10" />
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </ContentPage.Content>
</ContentPage>
